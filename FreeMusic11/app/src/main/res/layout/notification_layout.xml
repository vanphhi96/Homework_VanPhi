<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c6c6c6">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:id="@+id/iv_songnoti"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:id="@+id/iv_pausenoti"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Song"
        android:layout_toEndOf="@id/iv_songnoti"
        android:layout_alignTop="@id/iv_songnoti"
        android:layout_toStartOf="@id/iv_pausenoti"
        android:textSize="16sp"
        android:textColor="#fff"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_songnoti"
        android:layout_marginEnd="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singer"
        android:layout_toEndOf="@id/iv_songnoti"
        android:layout_below="@id/tv_songnoti"
        android:textColor="#96ffffff"
        android:id="@+id/tv_singernoti"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@id/iv_pausenoti"
        />
</RelativeLayout>