<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vanph.homeword1.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_congthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25x32"
            android:padding="@dimen/padding_deafault"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_gravity="right"
            />
        <TextView
            android:id="@+id/txt_ketqua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_deafault"
            android:textColor="@color/colorAccent"
            android:textSize="36dp"
            android:text="800"
            android:layout_gravity="right"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_button"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_phantram"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_pheptoan"
                android:layout_marginRight="@dimen/margin_button"
                android:text="%"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size"

                />
            <Button
                android:id="@+id/btn_chia"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_pheptoan"
                android:layout_marginRight="@dimen/margin_button"
                android:text="/"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size"
                />
            <Button
                android:id="@+id/btn_nhan"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_pheptoan"
                android:layout_marginRight="@dimen/margin_button"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_clear_black_24dp"
                android:paddingLeft="17dp"



                />
            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_backspace"
                android:drawableLeft="@drawable/ic_backspace_black_24dp"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_button">
            <Button

                android:id="@+id/btn_7"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_number"
                android:layout_marginRight="@dimen/margin_button"
                android:text="7"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorPrimaryDark"

                />
            <Button
                android:id="@+id/btn_8"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_number"
                android:layout_marginRight="@dimen/margin_button"
                android:text="8"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/btn_9"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_number"
                android:layout_marginRight="@dimen/margin_button"
                android:text="9"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/btn_tru"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pheptoan"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_remove_black_24dp"
                android:paddingLeft="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_button">
            <Button
                android:id="@+id/btn_4"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_number"
                android:layout_marginRight="@dimen/margin_button"
                android:text="4"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorPrimaryDark"

                />
            <Button
                android:id="@+id/btn_5"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_number"
                android:layout_marginRight="@dimen/margin_button"
                android:text="5"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorPrimaryDark"
                />
            <Button
                android:id="@+id/btn_6"
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_number"
                android:layout_marginRight="@dimen/margin_button"
                android:text="6"
                android:textSize="@dimen/text_size"
                android:textColor="@color/colorPrimaryDark"/>
            <Button
                android:layout_width="@dimen/Radius_btn"
                android:layout_height="@dimen/Radius_btn"
                android:background="@drawable/btn_pheptoan"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_add_black_24dp"
                android:paddingLeft="16dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_button" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/margin_button">
                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="@dimen/Radius_btn"
                        android:layout_height="@dimen/Radius_btn"
                        android:background="@drawable/btn_number"
                        android:layout_marginRight="@dimen/margin_button"
                        android:text="1"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"

                        />
                    <Button
                        android:layout_width="@dimen/Radius_btn"
                        android:layout_height="@dimen/Radius_btn"
                        android:background="@drawable/btn_number"
                        android:layout_marginRight="@dimen/margin_button"
                        android:text="2"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"
                        />
                    <Button
                        android:layout_width="@dimen/Radius_btn"
                        android:layout_height="@dimen/Radius_btn"
                        android:background="@drawable/btn_number"
                        android:text="3"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">
                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="146dp"
                        android:layout_height="@dimen/Radius_btn"
                        android:background="@drawable/btn_number0"
                        android:text="0"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/margin_button"
                        android:layout_marginRight="@dimen/margin_button"
                        />
                    <Button
                        android:layout_width="@dimen/Radius_btn"
                        android:layout_height="@dimen/Radius_btn"
                        android:background="@drawable/btn_number"
                        android:text="."
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/margin_button"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="@dimen/Radius_btn"
                    android:layout_height="146dp"
                    android:background="@drawable/btn_bang"
                    android:text="="
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>







</LinearLayout>
